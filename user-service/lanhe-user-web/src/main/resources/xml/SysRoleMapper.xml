<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.newland.lanhe.user.mapper.SysRoleMapper">

    <select id="getRoleWithIdByUserId" resultType="com.newland.lanhe.user.entity.SysRole">
        select t1.* from sys_role t1 left join sys_user_role t2 on t1.id = t2.role_id where t2.user_id=#{userId} <if test="enabled!=null"> and t1.enabled=#{enabled}</if>
    </select>
</mapper>
